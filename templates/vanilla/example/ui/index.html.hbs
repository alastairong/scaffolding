    <style>
      html,
      body {
        margin: 0;
        padding: 0;
        font-family: sans-serif;
        background-color: #ededed;
      }
    </style>
    <title>Example hApp</title>
  </head>

  <body>
    <div id="content"></div>

    <script type="module">
      import { AppWebsocket, AppAgentWebsocket } from '@holochain/client';
      
      async function connect() {
        const appWebsocket = await AppWebsocket.connect(
          `ws://localhost:${process.env.HC_PORT}`
        );
        const client = new AppAgentWebsocket(appWebsocket, 'hello-world');

        const result = await appWebsocket.callZome({
          cap_secret: null,
          role_name: 'hello_world',
          zome_name: 'hello_world',
          fn_name: 'hello_world',
          payload: null,
        });
    
        document.getElementById('content').innerHTML = `<span>${result}</span>`
      }
      
      connect();
    </script>
  </body>
</html>
